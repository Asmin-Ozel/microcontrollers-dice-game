#include <16F877A.h>
#fuses XT, NOWDT, NOPROTECT, NOBROWNOUT, NOLVP, NOPUT, NOWRT, NODEBUG, NOCPD
#use delay(clock=4M)
#include <lcd.c>

void main() {
    lcd_init();  // LCD'yi baþlat
    lcd_putc("\f");  // LCD'yi temizle
    lcd_gotoxy(1, 1);  // Ýlk satýra git
    printf(lcd_putc, "Test Mesaji");  // LCD'ye yaz

    while(TRUE) {
        // LCD'de sürekli olarak yazý sabit kalacak, döngü gerekmiyor.
    }
}

